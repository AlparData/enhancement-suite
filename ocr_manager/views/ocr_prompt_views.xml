<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ocr_prompt_tree" model="ir.ui.view">
        <field name="name">ocr.prompt.tree</field>
        <field name="model">ocr.prompt</field>
        <field name="arch" type="xml">
            <list string="Prompts OCR">
                <field name="name"/>
                <field name="code"/>
                <field name="provider_type"/>
                <field name="document_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ocr_prompt_form" model="ir.ui.view">
        <field name="name">ocr.prompt.form</field>
        <field name="model">ocr.prompt</field>
        <field name="arch" type="xml">
            <form string="Prompt OCR">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="provider_type"/>
                        </group>
                        <group>
                            <field name="document_type"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Plantilla">
                            <field name="template" widget="text" 
                                   style="font-family: monospace; min-height: 400px;" 
                                   placeholder="Instrucciones para la IA..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ocr_prompt_config" model="ir.actions.act_window">
        <field name="name">Prompts de IA</field>
        <field name="res_model">ocr.prompt</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ocr_manager_root" name="OCR Manager" parent="base.menu_custom" sequence="20"/>
    <menuitem id="menu_ocr_prompts" name="Prompts" parent="menu_ocr_manager_root" action="action_ocr_prompt_config"/>
</odoo>